#ifndef __PWM_H__
#define __PWM_H__

	#include "common.h"

	////////////////////////////////////////////////////////////////////////////////
	///	\brief defines the enum to select between PWM pins
	////////////////////////////////////////////////////////////////////////////////
	typedef enum{
		PWMPin1 = 1,	///< PB4 - TIM3_ch1 - D5
		PWMPin2 = 2		///< PB5 - TIM3_ch1 - D4
	}PWMPinSelectType;

	void PWM_Init(uint32_t frequencyHz, float initialtDuty)
	void PWM_SetDuty(PWMPinSelectType pin, float duty);

#endif
