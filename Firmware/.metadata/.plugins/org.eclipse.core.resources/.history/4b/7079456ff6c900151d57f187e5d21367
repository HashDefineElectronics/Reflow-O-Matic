#ifndef __USART_TWO_MCU_H__
#define __USART_TWO_MCU_H__

	#include "common.h"

	////////////////////////////////////////////////////////////////////////////////
	///	\brief defines the enum to select between PWM pins
	////////////////////////////////////////////////////////////////////////////////
	typedef enum{
		PWMPin1,	///< PB4 - TIM3_ch1 - D5
		PWMPin2,	///< PB5 - TIM3_ch1 - D4
	}PWMPinSelectType;

	void PWM_Init(void);
	void PWM_SetDuty(PWMPinSelectType pin, float duty);

#endif
