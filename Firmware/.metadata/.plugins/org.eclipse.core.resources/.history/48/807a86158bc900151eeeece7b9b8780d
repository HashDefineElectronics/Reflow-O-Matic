#include "common.h"
#include "Terminal/Terminal.h"


void HardwareSetup(void)
{

}

/////////////////////////////////////////////////////////////////////////
///	\brief the first user code function to be called after the ARM M0
///	has initial.
/////////////////////////////////////////////////////////////////////////
void main(void)
{
	HardwareSetup();
	Tick_init();
	Led_Init();
	Temperature_Init();
	Terminal_Init(&SerialPort2);

    for ( ;; )
    {
    	Terminal_Monitor();

    }
}
